{#
# Header widget
#}

<div class="header">
    <div class="header__site-name">ADVERTISEMENTS</div>
    <div class="header__user">
        {% if user %}
            <div class="header__user_authorized dropdown">
                <a class="dropdown-toggle btn btn-primary" href="#" data-bs-toggle="dropdown">Profile</a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Log out</a>
                    </li>
                </ul>
            </div>
        {% else %}
            <div class="header__user_unauthorized">
                <a href="{{ path('app_login') }}">Login</a>
                <a href="{{ path('app_register') }}">Registration</a>
            </div>
        {% endif %}
    </div>
</div>
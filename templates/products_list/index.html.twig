{#
# Products list
#}

<div class="products-list">
    {% for product in products %}
        <div class="products-list__name">{{ product.getName() }}</div>
        <div class="products-list__shortDescr">{{ product.getShortDescription() }}</div>
        {% if isUserExperience %}
            <div class="products-list__user-buttons">
                <a class="btn btn-primary" href="{{ path('app_edit_user_product', {id: product.getId()}) }}">Edit</a>
            </div>
        {% endif %}
    {% endfor %}
</div>
{#
# Products list
#}

<div class="products-list">
    {% for product in products %}
        <div class="product-item">
            <div class="product-item__name">{{ product.getName() }}</div>
            <div class="product-item__shortDescr">{{ product.getShortDescription() }}</div>
            {% if isUserExperience %}
                <div class="product-item__user-buttons">
                    <a class="btn btn-primary" href="{{ path('app_edit_user_product', {id: product.getId()}) }}">Edit</a>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>
{#
# Edit product
#}

{% extends 'base.html.twig' %}

{% block title %}Edit Ad{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('product_form') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('product_form') }}
{% endblock %}

{% block body %}
    <div class="edit-product">
        <h1 class="edit-product__title">Edit advertisement</h1>
        <div class="product-form">
            {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.shortDescription) }}
                {{ form_row(form.price) }}
                {% if product.getImageFilename() %}
                    <div class="product-form__uploaded-image mb-3">
                        <img class="image" alt="Product image" src="{{ asset('uploads/product_images/') ~ product.getImageFilename() }}" />
                        <div class="btn btn-danger remove">Remove</div>
                    </div>
                {% endif %}
                <div class="product-form__upload-image"{% if product.getImageFilename() %} style="display: none;"{% endif %}>
                    {{ form_row(form.image) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}